{% block logoSliderJavascript %}
{{ encore_entry_script_tags('logoSliderJs', null, 'transvis') }}
{% endblock %}

{% block logoSliderStylesheet %}
{{ encore_entry_link_tags('splideStyle', null, 'transvis') }}
{{ encore_entry_link_tags('logoSliderStyle', null, 'transvis') }}
{% endblock %}

{% block logoSliderContent %}
{% if loopIndex is not defined %}
{% set loopIndex = 0 %}
{% endif %}
{% if id is not defined %}
    {% set id = 'logoSlider' %}
{% endif %}
    {% if options.nosPartenaires is defined and options.nosPartenaires is not null %}
        <div class="row slider-container" id="sliderContainer">
            <div class="col-5 col-md-4 col-xl-3 slider-text d-flex justify-content-center align-items-center">
                <p class="text-center m-auto logoSliderText">ILS NOUS FONT CONFIANCE</p>
            </div>
            <div class="splide splide-{{loopIndex}} slider-slide col-7 col-md-8 col-xl-9" id="{{ id }}" aria-label="Logo de nos partenaires" data-loopIndex="{{loopIndex}}">
                <div class="splide__track">
                    <ul class="splide__list">
                        {% for partner in options.nosPartenaires %}
                            <li class="splide__slide  d-flex align-items-center justify-content-center">
                                <img src="{{ asset(partner) }}" alt="{{ partner.title }}" data-width='{{ partner|media.width }}' data-height='{{ partner|media.height }}' class="slider-logo img-responsive">
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}
    
{% endblock %}
