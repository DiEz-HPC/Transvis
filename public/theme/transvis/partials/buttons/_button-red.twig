{% block buttonRedStylesheet %}
    <link rel="stylesheet" href="{{ asset('css/btnRed.css') }}">
{% endblock buttonRedStylesheet %}

{% block buttonRedContent %}

{% if isBlack is not defined %}
{% set isBlack = false %}
{% endif %}
    <a class="btn-link d-flex justify-content-center align-items-center btn-link-more {{ isBlack ? 'btn-link-dark' : '' }} " href="{{ link ?? '' }}"
       style="width: {{ width ?? '' }}; height: {{ height ?? '' }}">
        <span class="me-2 align-baseline">{{ text | upper }}</span>
        <img src="{{ asset('images/savoirs-faire/next.png') }}" alt="next" class="next"
             style="width: {{ nextWidth ?? '' }}">
    </a>
{% endblock buttonRedContent%}
