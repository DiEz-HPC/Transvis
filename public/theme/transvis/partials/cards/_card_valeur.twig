{% block cardValeurContent %}
    <div class="js-timeline_item ag-timeline_item">
        <div class="ag-timeline-card_box d-flex justify-content-lg-center">
            <div class="js-timeline-card_point-box ag-timeline-card_point-box">
                <div class="ag-timeline-card_point d-flex justify-content-center align-items-center">
                    <img class="logo-valeur w-75" src="{{ asset(valeur.image.path) }}" alt="{{ valeur.image.alt }}">
                </div>
            </div>
        </div>
        <div class="ag-timeline-card_item">
            <div class="ag-timeline-card_inner">
                <div class="ag-timeline-card_info">
                    <div class="ag-timeline-card_desc text-start">
                        <h3 class="text-start text-light">{{ valeur.nameOfValue | upper }}</h3>
                        <p>{{ valeur.text }}</p>
                    </div>
                </div>
            </div>
            <div class="ag-timeline-card_arrow"></div>
        </div>
    </div>
{% endblock %}
