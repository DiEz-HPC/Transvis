{% use '@theme/partials/_block_top_singleton_with_image.twig' %}

{% block homeNosEquipesStylesheet %}
    {{ block('blockTopSingletonWithImageStylesheet') }}
{% endblock %}

{% block homeNosEquipesContent %}
