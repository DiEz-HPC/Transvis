{% block homeHeaderStylesheet %}
   <style>
        #headerVideoDiv {
            width: 100%;
            max-width: 100vw;
            margin: auto;
            display: block;
            position: relative;

        } /* This has been changed */
        #videoHeader {
            width: 100%;
            height: auto
        } /* This has been changed */
        #headerContent {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.5);
            top: 0;
            left: 0;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }
        .header-block-left{
            background: rgba(0, 0, 0, 0.5);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .header-block-left h1{
            color: #fff;
            font-size: 3rem;
            font-weight: 700;
            text-align: center;
            margin: 0;
        }
        .header-block-right{
            background: transparent;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
        }
    </style>
    {% endblock %}

{% block homeHeaderContent %}

    <div id="headerVideoDiv">
        <video controls muted autoplay preload="auto" id="videoHeader">
            <source src="{{ record.headerVideo }}">
        </video>

        <div id="headerContent" class="styling">
            <div class="col-12 col-xl-6 header-block-left">
                <h1>{{record.headerTitle}}</h1>
            </div>
            <div class="col-12 col-xl-6 header-block-right p-4">
                <p>{{record.headerTeaser}}</p>
            </div>
        </div>
    </div>

{% endblock %}