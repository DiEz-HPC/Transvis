{% use '@theme/partials/buttons/_button-red.twig' %}
{% block homeHeaderStylesheet %}
    <link rel="stylesheet" href="{{ asset('css/homeHeader.css') }}"/>
    {{ block('buttonRedStylesheet') }}

{% endblock %}

{% block homeHeaderContent %}

    <div id="headerVideoDiv" style="background-image: url({{ record.headerImage.path ?? '' }});">
        {{ include('partials/_header.twig') }}
        <video controls muted autoplay loop preload="auto" id="videoHeader">
            <source src="{{ record.headerVideo }}">
        </video>
        <div id="headerContent" class="styling">
            <div class="col-12 col-lg-6 col-xl-6 header-block-left">
                <h1 class="text-center">{{record.headerTitle}}</h1>
            </div>
            <div class="col-12 col-lg-6 col-xl-6 header-block-right p-4">
                <div class="col-12 col-lg-10">
                    {{record.headerTeaser}}
                </div>
            </div>
        </div>
        <div class="container headerHaveProject">
            {% include "@theme/partials/_line.twig" %}
            <div class=" d-flex flex-column flex-lg-row">
                <div class="col-lg-6 col-xl-6 align-items-center justify-content-center justify-content-lg-start">
                    <p class="headerHaveProjectText text-center text-lg-start mt-4">Vous avez un
                        <span>projet</span>
                        ?</p>
                    <div class="d-flex justify-content-center justify-content-lg-start mt-4">
                        {% with { text: "contactez-nous", link: '/contact', width: "200px", height: "38px", nextWidth: "8%"} %}
                            {{ block('buttonRedContent') }}
                        {% endwith %}
                    </div>
                </div>
                <div class="col-lg-6 col-xl-6 row align-items-center justify-content-center justify-content-lg-end my-4 mt-lg-0">
                 <p class="headerHaveProjectText text-center text-lg-end mt-4 p-0">Suivez nos

                        <span>actualit√©s</span> :
                    </p>
                    <div class="d-flex justify-content-center justify-content-lg-end mt-4 p-0">
                        {% with { text: "linkedin", link:(options.linkedin|default('https://www.linkedin.com/')), width: "150px", height: "38px", nextWidth: "12%", external: true, icon: 'images/linkedin-square-svgrepo-com.svg'} %}
                            {{ block('buttonRedContent') }}
                        {% endwith %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
