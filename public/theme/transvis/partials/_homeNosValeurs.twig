{% use '@theme/partials/cards/_card_valeur.twig' %}
{% use '@theme/partials/buttons/_button-red.twig' %}
{% block homeNosValeursStylesheet %}
    <link rel="stylesheet" href="{{ asset('css/homeNosValeurs.css') }}"/>
    {{ block('buttonRedStylesheet') }}
{% endblock %}

{% block homeNosValeursContent %}
    {% setcontent nosValeur = 'nos-valeurs' %}
    {% include "@theme/partials/_line.twig" %}
    <div class="homeValeurContainer py-5">
        <h2 class="homeValeursTitle text-center" data-aos="fade-up">
            {{ record.nosValeursTitle | upper }}
        </h2>
        <div class="container mt-5 homeNosValeurTeaser" data-aos="fade-up" data-aos-delay="250">
            {{ record.nosValeursTeaser}}
        </div>
        <div class="d-flex justify-content-center">
            {%  with { text: "En savoir plus", link: '/nos-valeurs', width: "200px", height: "37px", nextWidth: "8%", isBlack: true} %}
            {{ block('buttonRedContent') }}
            {% endwith %}
        </div>
    </div>
{% endblock %}
