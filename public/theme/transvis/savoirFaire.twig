{% extends '@theme/partials/_master.twig' %}

{% set cards = [record.cardOne, record.cardTwo, record.cardThree] %}
{% set keyFigures = [record.keyFigureOne, record.keyFigureTwo, record.keyFigureThree] %}

{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block javascript %}
{{ parent() }}
{%  endblock javascript %}

{% block main %}
    <div class="savoirs-faire mt-5">
        <div class="container-sf">
            {% include '@theme/partials/_block_top_singleton_with_image.twig' with {defaultImage: asset('images/savoirs-faire/cobot-emboxeuse.webp')} %}
            <div class="block-card d-flex flex-column flex-xl-row align-items-center align-items-lg-start justify-content-between col-12 my-5 pt-5">
                {% for  card in cards %}
                    {% include "@theme/partials/cards/_card_SF.twig" with { card: card, loop: loop.index } %}
                {% endfor %}
            </div>
        </div>
        {% include "@theme/partials/banner_keys/_banner_keys_figures.twig" with {keyFigures: keyFigures } %}
    </div>
{% endblock main %}
